<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div lass="container">
            <h1>SharingBay - Campground</h1>
            <p>Discover unique campgrounds shared by other sailers. </p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Share your campground</a>
            </p>
        </div>
    </header>

    <div class="row" style="display: flex; flex-wrap: wrap;">
        <div class="col-lg-12">
            <h3>Most Popular Sites</h3>
        </div>
        <% campgrounds.forEach(function(campgrounds) { %>
            <div class="col-md-3 col-sm-6 text-center">
                <div class="thumbnail">
                    <img src="<%= campgrounds.image %>">
                    <div class="caption">
                        <h4><%= campgrounds.name %></h4>
                    </div>
					<p>
						<a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary">More</a>
					</p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>